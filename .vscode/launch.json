{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Development Mode",
      "program": "${workspaceFolder}/src/start.js",
      "cwd": "${workspaceFolder}/src/",
      "runtimeArgs": [
        "--unhandled-rejections=warn",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Production",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "cwd": "${workspaceFolder}/src/",
      "env": {
        "NODE_ENV": "production"
      },
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Production",
      "program": "${workspaceFolder}/src/build/server/server.js",
      "cwd": "${workspaceFolder}/src/build/",
      "runtimeArgs": [
        "--enable-source-maps",
        "--unhandled-rejections=strict",
      ],
      "env": {
        "NODE_ENV": "production"
      },
    },
  ]
}